<p id="notice"><%= notice %></p>

<h1>Listing Students Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Assignment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students_assignments.each do |students_assignment| %>
      <tr>
        <td><%= students_assignment.student_id %></td>
        <td><%= students_assignment.assignment_id %></td>
        <td><%= link_to 'Show', students_assignment %></td>
        <td><%= link_to 'Edit', edit_students_assignment_path(students_assignment) %></td>
        <td><%= link_to 'Destroy', students_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

